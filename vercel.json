{
  "version": 2,
  "builds": [
    {
      "src": "./Server/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "./Client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "./Client/dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "./Server/index.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "./Client/dist/index.html"
    }
  ]
}
